<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NatureCollection" parent="Theme.AppCompat.Light">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#fff</item>
    </style>

    <style name="Theme.NatureCollection" parent="Base.Theme.NatureCollection" />

    <!-- Creer le composant titre par défaut -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <!-- Creer le composant sous-titre par défaut -->
    <style name="SubtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <!-- Creer le composant titre par défaut -->
    <style name="TitleTextStyle" parent="SubtitleTextStyle">
        <item name="android:textSize">24sp</item>
    </style>
</resources>